<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body container-fluid">

        <div class="row">
          <div class="dialog-title">Log in</div>
          <%= image_tag "login/close.png", :class => "close", :data => {:dismiss=>"modal"} %>
        </div>     
                 
        <div class="field">          
          <input id="ipEmail" type="text" placeholder="email" class="form-control" autofocus> 
        </div>

        <div class="field">                    
          <input id="ipPassword" type="password" placeholder="password" class="form-control">            
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">              
            <input id="cbRemember" type="checkbox" value="0">
            <span class="spRemember">Remember me</span>              
          </div>
        <% end -%>

        <div class="actions">
          <div id="btnLogin"><%=image_tag "login/btnlogin.png" %></div>            
        </div>                      

        <div class="links">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Sign up", new_registration_path(resource_name) %>
          <% end -%>
          or
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end -%>
        </div>
      </div>
    </div>
  </div>
</div>