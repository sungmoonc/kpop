<div class="modal fade" id="collectionModal" tabindex="-1" role="dialog" aria-labelledby="collectionModal" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body container-fluid">

        <div class="row">
          <div class="dialog-title">Add to collections</div>
          <%= image_tag "login/close.png", :class => "close", :data => {:dismiss=>"modal"} %>
        </div>     

        <% if signed_in? %>
          <div class="field">
            <input id="ipCreateCol" type="text" placeholder="Create a new collection" class="form-control" autofocus>
            <button id="btnAdd" data-video-id="{{id}}">Add</button>                  
          </div>

          <div class="field">
            <%= select_tag(
                :collection, options_for_select([["Add to Collection", "default"]] + @current_user_collections), class: "add-collection form-control"
              )
            %>
          </div>                         
          
          <div class="actions">
              <div id="btnSave" data-video-id="{{id}}"><%=image_tag "main/btnsave.png" %></div>
          </div>                              
        <% end %>
      </div>
    </div>
  </div>
</div>