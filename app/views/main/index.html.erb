<div id="notice"></div>

<div id="main-container" class="container-fluid">
  <div class="row">
    <div id="sidebar">
      <div class="top_bar">
        <a href="/"><div class="titleFilter"><%= image_tag("main/kpoptv_logo.png", :class=>"logo")%> KpopTV</div></a>
      </div>

      <% if ismypage %>
        <%= render 'left_mypage_menu' %>
      <% else %>
        <%= render 'left_menu' %>
      <% end %>
      
    </div>    

    <%= render 'video_dialog' %>
    <%= render 'add_collection_dialog' %>

    <%= render 'login_dialog' %>
    <%= render 'signup_dialog' %>
    <%= render 'edit_profile_dialog' %>

    <div id="main-content">
      <div class="top_bar">        

          <!-- search box -->
          <div class="searchBox col-md-2">
            <div class="input-group">              
              <input id="ipSearch" type="text" class="form-control" placeholder="Search...">
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>              
            </div><!-- /input-group -->            
          </div>

          <div class="dropdownP col-md-2">   
          <% if user_signed_in? %>                               
            <%= link_to image_tag("main/profile_none.png", :class => "imgProfile"), '/main/mypage' %></a>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'login-widget'  %>            
            <!-- <button class="btnProfile btn dropdown-toggle" type="button" id="btnSort" data-toggle="dropdown" aria-expanded="true"><span class="selection">Profile</span> <span class="caret"></span></button>
            <ul id="ddProfile" class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">          
              <li role="presentation"><a role="menuitem" value="youtube_views" tabindex="-1" href="#">Profile</a></li>            
            </ul>           -->
          <% else %>                      
            <div class="login-widget" data-toggle="modal" data-target="#loginModal">Sign in</div>          
            <div class="login-widget" data-toggle="modal" data-target="#signupModal">Sign up</div>                  
          <% end %>                         
          </div>           
      </div>

      <hr class="line"></hr>

      <div class="header_panel row">
        <div class="numResults col-md-5"></div>                
        <div class="dropdown col-md-2">                
            <% if !ismypage %>
              <button class="btnSort btn dropdown-toggle" type="button" id="btnSort" data-toggle="dropdown" aria-expanded="true"><span class="selection">SORT</span> <span class="caret"></span></button>
            <% end %>
            <ul id="ddSort" class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">  
              <li role="presentation"><a role="menuitem" value="hotness" tabindex="-1" href="#">Sexy Score</a></li>
              <li role="presentation"><a role="menuitem" value="cheesiness" tabindex="-1" href="#">Cheesy Score</a></li>    
              <li role="presentation"><a role="menuitem" value="approval_rating" tabindex="-1" href="#">Approval Rating</a></li>        
              <li role="presentation"><a role="menuitem" value="youtube_views" tabindex="-1" href="#">Youtube Views</a></li>
              <li role="presentation"><a role="menuitem" value="upload_date" tabindex="-1" href="#">Most Recent</a></li>                           
              <li role="presentation"><a role="menuitem" value="upvotes" tabindex="-1" href="#">Upvote</a></li>                           
            </ul>          
        </div>                

        <%= render 'view_menu_box' %>
      </div>
      <div class="cardContainer">
        <div id="cards" class="cards transitions-enabled row">
          <div class="thumbnails">
          </div>

          <div id="infinite-scrolling">
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%= render partial: "video_card_handlebar"%>
<%= render partial: "video_list_handlebar"%>
<%= render partial: "collection_list_handlebar"%>
