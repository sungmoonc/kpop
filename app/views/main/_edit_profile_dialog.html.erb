<div class="modal fade" id="editprofileModal" tabindex="-1" role="dialog" aria-labelledby="editprofileModal" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body container-fluid">

        	<div class="row">
	          <div class="dialog-title">Edit Profile</div>
	          <%= image_tag "login/close.png", :class => "close", :data => {:dismiss=>"modal"} %>
	        </div>        		 

  			<div class="field">          
          		<input id="ipEmail" type="text" placeholder="E-mail Address" class="form-control" autofocus> 
        	</div>

        	<div class="field">
        		<input id="ipPassword" type="password" placeholder="Password/8 characters minimum" class="form-control">
        	</div>           

        	<div class="field">
        		<input id="ipPasswordConfirm" type="password" placeholder="Password Confirmation" class="form-control">
        	</div>

          <div class="field">
            <input id="ipCurrentPassword" type="password" placeholder="New Password" class="form-control">
          </div>

        	<div class="actions">
        		<div id="btnUpdate">Update</div>
        	</div>			
		</div>
    </div>
  </div>
</div>

